<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinGroupActivity">

    <TextView
        android:id="@+id/tvJoinGroupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Group"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/etGroupId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Group ID"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvJoinGroupTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <EditText
        android:id="@+id/etGroupPasswordJoin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Group Password"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/etGroupId"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/btnJoinGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Join Group"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/etGroupPasswordJoin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
